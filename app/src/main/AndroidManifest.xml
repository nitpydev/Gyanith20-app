<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barebrains.gyanith20">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- For Uploading photos in CommunityFragment tab -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <application
        android:name=".gyanith20"
        android:allowBackup="true"
        android:icon="@drawable/l2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/l2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Noactionbar">
        <service android:name=".Services.PostUploadService" />

        <activity android:name=".Activities.UploadPostActivity" />
        <activity android:name=".Activities.RegisterActivity" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".Activities.EventCategoriesActivity" />
        <activity android:name=".Activities.EventDetailsActivity" />
        <activity android:name=".Activities.ProfileActivity" />
        <activity android:name=".Activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".Others.notreceiver">
            <intent-filter>
                <action android:name="gyanith.notify" />
            </intent-filter>
        </receiver>

        <activity android:name=".Activities.AboutActivity" />
    </application>

</manifest>