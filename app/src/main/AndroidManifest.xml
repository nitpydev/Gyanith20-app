<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.barebrains.gyanith20">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- For Uploading photos in CommunityFragment tab -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".gyanith20"
        android:allowBackup="true"
        android:icon="@drawable/l2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/l2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Noactionbar"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.SpecificPostActivity"
            android:label="@string/app_name">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Accepts URIs that begin with "http://recipe-app.com/recipe" -->
                <data android:scheme="http"
                    android:host="gyanith.com"
                    android:pathPrefix="/post" />

            </intent-filter>
        </activity>

        <service android:name=".services.PostUploadService" />

        <activity android:name=".activities.UploadPostActivity" />
        <activity android:name=".activities.RegisterActivity" />
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name" />
        <activity android:name=".activities.EventCategoriesActivity" />
        <activity android:name=".activities.EventDetailsActivity" />
        <activity android:name=".activities.ProfileActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name=".others.notreceiver">
            <intent-filter>
                <action android:name="gyanith.notify" />
            </intent-filter>
        </receiver>

        <activity android:name=".activities.AboutActivity" />
    </application>

</manifest>