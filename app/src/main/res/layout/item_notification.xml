<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="40dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:longClickable="true"
    app:cardBackgroundColor="?colorPrimary"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:clickable="false"
        android:foreground="?android:selectableItemBackground"
        android:longClickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:clickable="false"
            android:longClickable="false"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/notificationSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pnbold"
                android:text="Developer"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/notificationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pnreg"
                android:text="6 , Mon 4:54 PM"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:fontFamily="@font/pnreg"
            android:linksClickable="false"
            android:text="Hi there, This is a sample notification from developers, but a little long to see how text flows multiple lines"
            android:textColor="@android:color/white"
            android:textSize="18sp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
