<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    tools:context="activities.EventDetailsActivity">


    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackDrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/eveimv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/fh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:alpha="0"
                    android:tint="#ff0111"
                    app:srcCompat="@drawable/ic_baseline_favorite_24px" />


                <FrameLayout
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/ic_launcher_round"
                    android:backgroundTint="@color/cardbg"
                    android:elevation="5dp"
                    android:paddingLeft="9dp"
                    android:paddingTop="10.5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="10.5dp">

                    <com.barebrains.gyanith20.components.AnimatedToggle
                        android:id="@+id/favButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@null"
                        android:button="@drawable/toggle_button"
                        android:checked="false"
                        android:foregroundGravity="center"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />

                </FrameLayout>

                <ImageButton
                    android:id="@+id/backbut2"
                    style="@style/backbtn"
                    android:backgroundTint="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/evedttitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginBottom="25dp"
                        android:fontFamily="@font/spregu"
                        android:gravity="center"
                        android:text="Loading..."
                        android:textColor="@android:color/white"
                        android:textSize="32sp" />

                </LinearLayout>

            </FrameLayout>

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/dtab"
                style="@style/tabs"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rules" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact" />
            </com.google.android.material.tabs.TabLayout>

            <TextView
                android:id="@+id/evedesc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="80dp"
                android:layout_weight="1"
                android:fontFamily="@font/pnreg"

                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/reg"
        style="@style/txtBtn"
        android:backgroundTint="#191fcd"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
