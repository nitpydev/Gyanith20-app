<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/topb"
    tools:context=".event_categories">

    <ProgressBar
        android:id="@+id/catload"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/pnbold"
        android:text="Will be updated soon."
        android:textColor="#96ffffff"
        android:textSize="24sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/backbut"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:background="?attr/homeAsUpIndicator"
                android:backgroundTint="@android:color/white"
                android:foreground="?attr/selectableItemBackground" />

            <TextView
                android:id="@+id/cattitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/splight"
                android:text="TextView"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/eveitlv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp"></ListView>

    </LinearLayout>
</FrameLayout>
